# Environment Variables for Naughty Chats Backend

## Development Environment
# Copy this file to .env and fill in your values for local development

# Environment
ENV=dev

# Database Configuration
COSMOS_URL=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key
COSMOS_DB=naughtychats-db

# Authentication
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://naughty-frontend-dev-ysurana.eastus.azurecontainer.io

# Service Bus (for async jobs)
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# Storage Account (for image uploads)
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# External APIs
RUNPOD_API_KEY=your-runpod-api-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key

# Optional: Feature Flags
ENABLE_NSFW_CONTENT=true
ENABLE_IMAGE_GENERATION=true
ENABLE_AFFILIATE_PROGRAM=true